<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/color_layout_back" />
        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="-2dp">
        <shape>
            <corners android:bottomRightRadius="10dp" android:bottomLeftRadius="10dp" />
            <solid android:color="@color/color_white"/>
            <stroke
                android:width="1dp"
                android:color="@color/color_layout_stock" />
        </shape>
    </item>
</layer-list>